<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        
        x:Class="Egorozh.ColorPicker.Dialog.ColorPickerDialog"
        
        xmlns:picker="clr-namespace:Egorozh.ColorPicker;assembly=Egorozh.ColorPicker.Avalonia"
        
        Title="Select Color"

        Width="340"
        Height="380"

        ShowInTaskbar="False"

        CanResize="false"
        
        WindowStartupLocation="CenterScreen"
        
        Name="Dialog">

  <Grid Margin="10"
        RowDefinitions="* auto">
    
    <picker:ColorPickerControl Color="{Binding #Dialog.Color, Mode=TwoWay}" />

    <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">

      <Button Content="OK"
              Margin="0 0 5 0"
              Width="85"
              Name="btOk"
              Click="btOk_Click" />

      <Button Content="Cancel"
              Width="85"
              Name="btCancel"
              Click="btCancel_Click" />
    </StackPanel>

  </Grid>
  
</Window>
