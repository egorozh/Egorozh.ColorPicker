<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netcoreapp3.0;net47;net5.0</TargetFrameworks>
    <LangVersion>preview</LangVersion>
    <RootNamespace>Egorozh.ColorPicker.Dialog</RootNamespace>
    <Nullable>enable</Nullable>
  
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/egorozh/Egorozh.ColorPicker</PackageProjectUrl>
    <RepositoryUrl>https://github.com/egorozh/Egorozh.ColorPicker</RepositoryUrl>
    <PackageTags>Color, ColorPicker, Avalonia, AvaloniaUI</PackageTags>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <Description>ColorPicker dialog for Avalonia</Description>
    <Version>0.10.7</Version>
    <AssemblyVersion>0.10.7</AssemblyVersion>
    <FileVersion>0.10.7</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.10.0" />
    <PackageReference Include="MessageBox.Avalonia" Version="1.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Egorozh.ColorPicker.Avalonia\Egorozh.ColorPicker.Avalonia.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Themes\Controls\" />
  </ItemGroup>

</Project>