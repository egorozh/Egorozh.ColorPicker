<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:local="clr-namespace:Egorozh.ColorPicker;assembly=Egorozh.ColorPicker.Avalonia">

  <Style Selector="local|ColorEditor">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid RowDefinitions="auto * auto">

            <Grid ColumnDefinitions="auto *">

              <ComboBox Name="PART_HexComboBox"
                        Grid.Column="1"
                        Margin="10 2 2 2">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                      <Ellipse Fill="{Binding Color, Converter={local:ColorToSolidColorBrushConverter}}"
                               Margin="0 1 1 1"
                               Width="{Binding $self.Bounds.Height}" />
                      <TextBlock Text="{Binding Name}"
                                 Margin="1 0 0 0" />
                    </StackPanel>
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>

            </Grid>

            <Grid Grid.Row="1"
                  RowDefinitions="auto auto auto auto"
                  ColumnDefinitions="auto *">



              <local:RgbaColorNumericUpDown Name="PART_AlphaNumUpDown" 
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Label="A"
                                            Channel="Alpha"/>

              <local:RgbaColorSlider Name="PART_AlphaSlider"
                                     Grid.Row="3"
                                     Grid.Column="1"
                                     Orientation="Horizontal"
                                     Channel="Alpha" />
            </Grid>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>

</Styles>