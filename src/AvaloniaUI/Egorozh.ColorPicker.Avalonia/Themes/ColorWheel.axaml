<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:local="clr-namespace:Egorozh.ColorPicker.Avalonia;assembly=Egorozh.ColorPicker.Avalonia">

  <Style Selector="local|ColorWheel">

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid >
            <Grid Background="White"
                  Margin="5">
              <Ellipse Name="PART_SpectrumEllipse"
                       StrokeThickness="0"
                       Width="140"
                       Height="140" />
            </Grid>

            <Canvas>
              <Ellipse Name="PART_CursorEllipse"
                       Stroke="Black"
                       Fill="#AAFFFFFF"
                       Width="10"
                       Height="10"
                       StrokeThickness="1" />
            </Canvas>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>

  </Style>

</Styles>